{% extends 'base.html.twig' %}

{% block title %}Artiste index{% endblock %}

{% block body %}
    <h2>Artiste index</h2>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Pays</th>
                <th>Presentation</th>
                <th>Style</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                
                <td>{{ artiste.nom }}</td>
                <td>{{ artiste.pays }}</td>
                <td>{{ artiste.presentation }}</td>
                <td>{{ artiste.style }}</td>
                <td>
                    <a href="{{ path('artiste_show', {'id': artiste.id}) }}">Voir la fiche artiste</a>
                  {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{ path('artiste_edit', {'id': artiste.id}) }}">edit</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {% if is_granted('ROLE_SUPER_ADMIN') %}
    <a href="{{ path('artiste_new') }}">Create new</a>
{% endif %}
   
{% endblock %}
