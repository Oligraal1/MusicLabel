{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Artiste</th>
                <td>{{ event.artisteId }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ event.ville }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ event.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
    <p> Cordonnées de la ville : X = {{ ville[1] }} et Y = {{ ville[0] }}
    
     <div id="mapid" style="height:300px;width:800px"></div>
    <script>
    var mymap = L.map('mapid').setView([{{ ville[1] }}, {{ ville[0] }}], 25);
    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
	attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
	maxZoom: 18,
	id: 'mapbox.streets',
	accessToken: 'pk.eyJ1Ijoib2xpZ3JhYWwiLCJhIjoiY2p6bGVnYjd1MDN6NjNtdDZ4cmc5OXQyMyJ9.YRJU--EMmYxn823YyMf3LQ'
}).addTo(mymap);
    </script>
{% endblock %}
