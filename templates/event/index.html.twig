{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h2>Event index</h2>
    
    {{ asset ('./image/concertP.jpg') | figure('That\'s my show', '1200px','600px','slam dans le public') | raw }}

    <table class="table table-bordered table-hover p-3 m-4">
        <thead class="thead-dark">
            <tr>
                <th>Artiste</th>
                <th>Type</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Lieu</th>
                <th>Ville</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td class="font-weight-bold">{{ event.artisteId.nom }}</td>
                <td>{{ event.type }}</td>
                <td>{{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}</td>
                <td>{{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}</td>
                <td>{{ event.lieu }}</td>
                <td>{{ event.ville }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.prix }}</td>
                <td>
                    <a href="{{ path('event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">Create new</a>
    
{% endblock %}
